<style>
    .timeline {
        position: relative;
        max-width: 1200px;
        margin: 0 auto;
    }

        .timeline::after {
            content: '';
            position: absolute;
            width: 6px;
            background-color: black;
            top: 0;
            bottom: 0;
            left: 50%;
            margin-left: -3px;
        }

    .container5 {
        padding: 10px 40px;
        position: relative;
        background-color: cornflowerblue;
        width: 50%;
        border-radius: 25px;
    }

        .container5::after {
            content: '';
            position: absolute;
            width: 25px;
            height: 25px;
            right: -17px;
            background-color: gray;
            border: 4px solid lightgray;
            top: 15px;
            border-radius: 50%;
            z-index: 1;
        }

    .left5 {
        left: 0;
    }

    .right5 {
        left: 50%;
    }

    .left5::before {
        content: " ";
        height: 0;
        position: absolute;
        top: 22px;
        width: 0;
        z-index: 1;
        right: 30px;
        border: medium solid white;
        border-width: 10px 0 10px 10px;
        border-color: transparent transparent transparent white;
    }

    .right5::before {
        content: " ";
        height: 0;
        position: absolute;
        top: 22px;
        width: 0;
        z-index: 1;
        left: 30px;
        border: medium solid white;
        border-width: 10px 10px 10px 0;
        border-color: transparent white transparent transparent;
    }

    .right5::after {
        left: -16px;
    }

    .content5 {
        padding: 20px 30px;
        background-color: cornflowerblue;
        color: white;
        position: relative;
        border-radius: 6px;
    }

    .container5 {
        width: 100%;
        padding-left: 70px;
        padding-right: 25px;
    }

        .container5::before {
            left: 60px;
            border: medium solid white;
            border-width: 10px 10px 10px 0;
            border-color: transparent white transparent transparent;
        }

    .left5::after, .right5::after {
        left: 15px;
    }

    .right5 {
        left: 0%;
    }

    }
</style>

